{
    "meta": {
        "label": "Service accounts",
        "description": "Create one preset per credential and SAP-OData server to access",
        "icon": "icon-list"
    },
    "defaultDefinableInline": true,
    "defaultDefinableAtProjectLevel": true,
    "pluginParams": [],
    "params": [
        {
            "name": "odata_instance",
            "label": "Resource",
            "type": "STRING",
            "description": "http://<Host>:<Port>/sap/opu/odata/SAP/<Service Name>",
            "mandatory": true,
            "visibilityCondition": "model.odata_version == 'sap'"
        },
        {
            "name": "odata_instance",
            "label": "Resource",
            "type": "STRING",
            "description": "URL to the .svc resource, e.g. https://services.odata.org/V3/OData/OData.svc/",
            "mandatory": true,
            "visibilityCondition": "model.odata_version != 'sap'"
        },
        {
            "name": "ignore_ssl_check",
            "label": "Ignore SSL check",
            "type": "BOOLEAN",
            "description": "",
            "defaultValue": false
        },
        {
            "name": "odata_version",
            "label": "OData protocol version",
            "type": "SELECT",
            "defaultValue" : "sap",
            "visibilityCondition": false,
            "selectChoices": [
                {
                    "value": "sap",
                    "label": "SAP OData"
                }
            ]
        },
        {
            "name": "sap_mode",
            "label": "SAP mode",
            "type": "SELECT",
            "defaultValue" : "cds",
            "selectChoices": [
                {
                    "value": "cds",
                    "label": "CDS"
                },
                {
                    "value": "odp",
                    "label": "ODP"
                }
            ]
        },
        {
            "name": "odata_username",
            "label": "Username",
            "type": "STRING",
            "description": "",
            "mandatory": false
        },
        {
            "name": "odata_password",
            "label": "Password",
            "type": "PASSWORD",
            "description": "",
            "mandatory": false
        },
        {
            "name": "sap_client",
            "label": "Client",
            "type": "STRING",
            "description": "",
            "mandatory": false,
            "visibilityCondition": "model.odata_version == 'sap'"
        },
        {
            "name": "services_separator",
            "label": "Services",
            "type": "SEPARATOR"
        },
        {
            "name": "service_names",
            "label": "Service names",
            "description": "Service name -> Human readable description",
            "type": "MAP"
        }
    ]
}